<?xml version="1.0"?>
<phpunit
	bootstrap="bootstrap.php"
	backupGlobals="false"
	colors="true"
	convertErrorsToExceptions="true"
	convertNoticesToExceptions="true"
	convertWarningsToExceptions="true"
	>
	<php>
		<const name="WPGRAPHQL_BP_USE_WP_ENV_TESTS" value="1" />
	</php>
	<testsuites>
		<testsuite name="unit">
			<directory suffix=".php">./testcases/</directory>
		</testsuite>
	</testsuites>
</phpunit>
